
if(document){
		kiki_referer_check();
}else{
	window.addEventListener("DOMContentLoaded", function(){
		kiki_referer_check();
	});
}

function kiki_referer_check(){
	if(document.referrer){
		if((document.referrer).indexOf(location.hostname) == -1){
			if((document.referrer).indexOf("https://gamekiki.com/widget/widget") == -1) {
				console.log("from external domain, domain : ", document.referrer);

				var expire = new Date();
			    var expireTime =  1000 * 3600;
			        
				
				expire.setTime(expire.getTime() + expireTime);

				var cookies = null;
				//cookies = "kiki_wg_tk_fr" + '=' + btoa(document.referrer) + ';' + 'path=/' + ';';
				cookies = "kiki_wg_tk_fr" + '=' + btoa(document.referrer) + ';' + 'path=/' + ';';
				
				cookies += 'expires=' + expire.toUTCString()		+  ';';		
		     	console.log("cookie is " + cookies);
					
				cookies = cookies.replace(/%5F/g, '_');	
		        document.cookie = cookies;			
		        console.log("referrer cookie setting done..",cookies);

			}
		}else{
			console.log("Ref check", document.referrer, location.hostname);
		}
	}
}